pipeline {
    agent any

    environment {
        // Variables used throughout the pipeline [cite: 206, 212]
        DOCKER_IMAGE_NAME = 'calculator'
        GITHUB_REPO_URL = 'https://github.com/nikx-Domain/SPE-Classwork.git'
        DOCKER_HUB_USER = 'nikxdomain' 
    }

    stages {
        stage('Checkout') {
            steps {
                script {
                    // Clone the code from GitHub [cite: 217, 224]
                    git branch: 'main', url: "${GITHUB_REPO_URL}"
                }
            }
        }

        stage('Build Docker Image') {
            steps {
                script {
                    // Navigate to folder and build the image [cite: 228, 231]
                    dir('calculator') {
                        sh "docker build -t ${DOCKER_IMAGE_NAME} ."
                    }
                }
            }
        }

        stage('Push Docker Images') {
            steps {
                script {
                    // Tag and push to Docker Hub using stored credentials [cite: 233, 236-237]
                    docker.withRegistry('', 'DockerHubCred') {
                        sh "docker tag ${DOCKER_IMAGE_NAME} ${DOCKER_HUB_USER}/${DOCKER_IMAGE_NAME}:latest"
                        sh "docker push ${DOCKER_HUB_USER}/${DOCKER_IMAGE_NAME}:latest"
                    }
                }
            }
        }

        stage('Run Ansible Playbook') {
            steps {
                script {
                    // Deploy to the VM using Ansible [cite: 239, 250]
                    dir('calculator') {
                        ansiblePlaybook(
                            playbook: 'deploy.yml',
                            inventory: 'inventory'
                        )
                    }
                }
            }
        }
    }
}
