pipeline {
    agent any

    environment {
        // Variables for your specific project
        DOCKER_IMAGE_NAME = 'calculator'
        GITHUB_REPO_URL   = 'https://github.com/nikx-Domain/SPE-Classwork.git'
        DOCKER_HUB_USER   = 'nikxdomain'
    }

    stages {
        stage('Checkout') {
            steps {
                script {
                    // Pull the latest code from your main branch
                    git branch: 'main', url: "${GITHUB_REPO_URL}"
                }
            }
        }

        stage('Build Docker Image') {
            steps {
                script {
                    // Navigate to the folder containing your Dockerfile
                    dir('calculator') {
                        sh "docker build -t ${DOCKER_IMAGE_NAME} ."
                    }
                }
            }
        }

        stage('Push Docker Images') {
            steps {
                script {
                    // Authenticate and push to Docker Hub using Global ID
                    docker.withRegistry('', 'DockerHubCred') {
                        sh "docker tag ${DOCKER_IMAGE_NAME} ${DOCKER_HUB_USER}/${DOCKER_IMAGE_NAME}:latest"
                        sh "docker push ${DOCKER_HUB_USER}/${DOCKER_IMAGE_NAME}:latest"
                    }
                }
            }
        }

        stage('Run Ansible Playbook') {
            steps {
                script {
                    // Deploy to the VM using the Ansible plugin and VM credentials
                    dir('calculator') {
                        ansiblePlaybook(
                            playbook: 'deploy.yml',
                            inventory: 'inventory',
                            credentialsId: 'localhost' // Uses your VM user (iiitb) login
                        )
                    }
                }
            }
        }
    }

    post {
        always {
            echo 'Pipeline execution complete.'
        }
        success {
            echo 'Calculator deployed successfully!'
        }
        failure {
            echo 'Pipeline failed. Please check the Console Output for errors.'
        }
    }
}
